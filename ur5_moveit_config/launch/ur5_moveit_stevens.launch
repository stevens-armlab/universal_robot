<launch>
  <arg name="sim" default="false" />
  <arg name="hardware" default="false" />
  <arg name="limited" default="false"/>
  <arg name="debug" default="false" />
  <arg name="attach_hand" default="false"/>
  
  <!-- Remap follow_joint_trajectory -->
  <remap if="$(arg hardware)" from="/follow_joint_trajectory" to="/scaled_pos_joint_traj_controller/follow_joint_trajectory"/>
  <remap if="$(arg sim)" from="/follow_joint_trajectory" to="/arm_controller/follow_joint_trajectory"/>


  <!-- Launch moveit -->
  <include if="$(arg attach_hand)" file="$(find ur5_with_hand_moveit_config)/launch/move_group.launch">
    <arg name="limited" default="$(arg limited)"/>
    <arg name="debug" default="$(arg debug)" />
  </include>

  <include unless="$(arg attach_hand)" file="$(find ur5_moveit_config)/launch/move_group.launch">
    <arg name="limited" default="$(arg limited)"/>
    <arg name="debug" default="$(arg debug)" />
  </include>

</launch>
